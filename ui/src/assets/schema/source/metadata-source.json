                    "title": "label.type",
                    "description": "tooltip.certificate-type",
                    "type": "string",
                    "oneOf": [
                        {
                            "enum": [
                                "signing"
                            ],
                            "description": "value.signing"
                        },
                        {
                            "enum": [
                                "encryption"
                            ],
                            "description": "value.encryption"
                        },
                        {
                            "enum": [
                                "both"
                            ],
                            "description": "value.both"
                        }
                    ],
                    "default": "both"
                },
                "value": {
                    "title": "label.certificate",
                    "description": "tooltip.certificate",
                    "type": "string"
                }
            }
