                            ],
                            "description": "urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST"
                        },
                        {
                            "enum": [
                                "urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect"
                            ],
                            "description": "urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect"
                        }
                    ]
                }
            }
